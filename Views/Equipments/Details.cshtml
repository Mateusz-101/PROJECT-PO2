@model OSPManagementSystem.Models.Equipment

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Equipment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SerialNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SerialNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastInspectionDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastInspectionDate)
        </dd>
    </dl>
</div>
<h4>Historia użycia:</h4>
@if (Model.UsageHistory != null && Model.UsageHistory.Any())
{
    <ul>
        @foreach (var h in Model.UsageHistory)
        {
            <li>@h.UsedDate.ToShortDateString() — @h.Notes</li>
        }
    </ul>
}
else
{
    <p><i>Brak danych o użyciu</i></p>
}
<p>
    <a asp-controller="EquipmentUsageHistories" asp-action="Create" asp-route-equipmentId="@Model.Id" class="btn btn-outline-primary">
        Dodaj wpis historii użycia
    </a>
</p>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
