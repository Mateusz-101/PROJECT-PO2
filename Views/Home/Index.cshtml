@{
    ViewData["Title"] = "Panel główny";
}

<div class="container d-flex flex-column align-items-center mt-5">
    <div class="text-center mb-4">
        <img src="~/images/logo.png" alt="OSP Logo" style="height: 80px;" />
        <h1 class="mt-3 text-danger fw-bold">System Zarządzania OSP</h1>
        <p class="lead text-muted">Witamy w panelu zarządzania jednostką OSP. Wybierz dział, aby rozpocząć pracę.</p>
    </div>

    <div class="d-flex flex-wrap justify-content-center gap-4">
        <!-- Strażacy -->
        <div class="card border-osp-red shadow-sm h-100">
            <div class="card-body text-center">
                <h5 class="card-title text-osp-red"><i class="bi bi-people-fill me-1"></i> Strażacy</h5>
                <p class="card-text text-muted">Zarządzaj danymi strażaków, uprawnieniami i szkoleniami.</p>
                <a asp-controller="Firefighters" asp-action="Index" class="btn btn-outline-danger w-100">Przejdź</a>
            </div>
        </div>

        <!-- Dyżury -->
        <div class="card border-osp-red shadow-sm h-100">
            <div class="card-body text-center">
                <h5 class="card-title text-osp-red"><i class="bi bi-calendar-check me-1"></i> Dyżury</h5>
                <p class="card-text text-muted">Zaplanuj dyżury i ćwiczenia. Przypisz członków do terminów.</p>
                <a asp-controller="Schedules" asp-action="Index" class="btn btn-outline-danger w-100">Zaplanuj</a>
            </div>
        </div>

        <!-- Akcje -->
        <div class="card border-osp-red shadow-sm h-100">
            <div class="card-body text-center">
                <h5 class="card-title text-osp-red"><i class="bi bi-fire me-1"></i> Akcje</h5>
                <p class="card-text text-muted">Rejestruj akcje ratownicze i przypisuj strażaków oraz sprzęt.</p>
                <a asp-controller="RescueActions" asp-action="Index" class="btn btn-outline-danger w-100">Zobacz akcje</a>
            </div>
        </div>

        <!-- Sprzęt -->
        <div class="card border-osp-red shadow-sm h-100">
            <div class="card-body text-center">
                <h5 class="card-title text-osp-red"><i class="bi bi-box-seam me-1"></i> Sprzęt</h5>
                <p class="card-text text-muted">Monitoruj sprzęt, przeglądy techniczne i historię wypożyczeń.</p>
                <a asp-controller="Equipments" asp-action="Index" class="btn btn-outline-danger w-100">Sprzęt</a>
            </div>
        </div>

        <!-- Raporty -->
        <div class="card border-osp-red shadow-sm h-100">
            <div class="card-body text-center">
                <h5 class="card-title text-osp-red"><i class="bi bi-graph-up me-1"></i> Raporty</h5>
                <p class="card-text text-muted">Generuj raporty PDF lub Excel z aktywności strażaków.</p>
                <a asp-controller="Reports" asp-action="Index" class="btn btn-outline-danger w-100">Raporty</a>
            </div>
        </div>
    </div>
</div>