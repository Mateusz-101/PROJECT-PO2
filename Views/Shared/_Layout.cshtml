<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OSPManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OSPManagementSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
</head>
<body>
    <div class="d-flex">
        <aside class="sidebar bg-white border-end p-3" style="width: 220px; min-height: 100vh;">
            <div class="text-center mb-4">
                <a asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="Logo OSP" style="height: 50px;" />
                </a>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center text-danger" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house me-2"></i>
                        <span>Strona główna</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center text-danger" asp-controller="Firefighters" asp-action="Index">
                        <i class="bi bi-people-fill me-2"></i>
                        <span>Strażacy</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center text-danger" asp-controller="Trainings" asp-action="Index">
                        <i class="bi bi-mortarboard-fill me-2"></i>
                        <span>Szkolenia</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center text-danger" asp-controller="Schedules" asp-action="Index">
                        <i class="bi bi-calendar-event me-2"></i>
                        <span>Dyżury</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center text-danger" asp-controller="RescueActions" asp-action="Index">
                        <i class="bi bi-fire me-2"></i>
                        <span>Akcje</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center text-danger" asp-controller="Equipments" asp-action="Index">
                        <i class="bi bi-wrench-adjustable me-2"></i>
                        <span>Sprzęt</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center text-danger" asp-controller="Reports" asp-action="Index">
                        <i class="bi bi-bar-chart-fill me-2"></i>
                        <span>Raporty</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center text-danger" asp-controller="Home" asp-action="Privacy">
                        <i class="bi bi-info-circle me-2"></i>
                        <span>O aplikacji</span>
                    </a>
                </li>
            </ul>
        </aside>

        <div class="flex-grow-1 p-4">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>


    <footer class="footer text-muted">
        &copy; 2025 - OSPManagementSystem - <a asp-controller="Home" asp-action="Privacy">Polityka prywatności</a>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
